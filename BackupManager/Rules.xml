<?xml version="1.0" encoding="utf-8"?>
<Rules xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">  
  <FileRules>
    <FileRule>
      <FileToMatchRegEx>^.*\\_TV(\s\(non-tvdb\))?\\.*$</FileToMatchRegEx>
      <FileRuleRegEx>^.*{t(m|v)db-\d{1,7}?}.*$</FileRuleRegEx>
      <Message>TV files must contain {tvdb-xxxxxxx} or {tmdb-xxxxxxx} in the file name</Message>
      <Name>Rule 1</Name>
      <Number>1</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_TV(\s\(non-tvdb\))?\\.*$</FileToMatchRegEx>
      <FileRuleRegEx>^((?!\sTBA\s).)*$</FileRuleRegEx>
      <Message>TV files must not contain TBA in the file name</Message>
      <Name>Rule 2</Name>
      <Number>2</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_TV(\s\(non-tvdb\))?\\.*$</FileToMatchRegEx>
      <FileRuleRegEx>^(.*\ss\d{1,4}e\d{2,4}((\s|\.)|-?e\d{2,4}(\s|\.)).*|.*\s\d{4}-\d\d-\d\d.*|.*-(featurette|other|interview|scene|short|deleted|behindthescenes|trailer)\..*)$</FileRuleRegEx>
      <Message>TV files must either be a special feature or have s00e00 or yyyy-mm-dd in the file name</Message>
      <Name>Rule 3</Name>
      <Number>3</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_TV(\s\(non-tvdb\))?\\.*$</FileToMatchRegEx>
      <FileRuleRegEx>^(?:.*\\_TV(?:\s\(non-tvdb\))?\\(.*){t(m|v)db-\d{1,7}?}\\(Season\s\d+|Specials).*\\(\1.*)|.*-(featurette|other|interview|scene|short|deleted|behindthescenes|trailer)\..*)$</FileRuleRegEx>
      <Message>TV files must either be a special feature or start with the TV show name followed by a Season/Specials folder and then the file name</Message>
      <Name>Rule 4</Name>
      <Number>4</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_(Movies|Comedy|Concerts)\\.*$</FileToMatchRegEx>
      <FileRuleRegEx>^(?:.*\\_(Movies|Comedy|Concerts)\\.*\\.*\s{tmdb-\d{1,7}?}.*|.*-(featurette|other|interview|scene|short|deleted|behindthescenes|trailer)\..*)$</FileRuleRegEx>
      <Message>Movies, Comedy and Concerts files must be a special feature or have {tmdb- in the file name</Message>
      <Name>Rule 5</Name>
      <Number>5</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_(Movies|Comedy|Concerts)(?:\s\(non-tmdb\))?\\.*$</FileToMatchRegEx>
      <FileRuleRegEx>^(?:.*\\_(?:Movies|Comedy|Concerts)(?:\s\(non-tmdb\))?\\(.*)\\(\1)(?:\s{tmdb-\d{1,7}?})?.*|.*-(featurette|other|interview|scene|short|deleted|behindthescenes|trailer)\..*)$</FileRuleRegEx>
      <Message>Movies, Comedy and Concerts files must either be a special feature or start with the folder name in the file name</Message>
      <Name>Rule 6</Name>
      <Number>6</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_(Movies|Comedy|Concerts)(?:\s\(non-tmdb\))?\\(.*)\\.* {edition-.*$</FileToMatchRegEx>
      <FileRuleRegEx>^.*\s{edition-(((10|20|25|30|35|40|50|60|70)TH\sANNIVERSARY)|4K|BLURAY|CHRONOLOGICAL|COLLECTORS|(CRITERION|KL\sSTUDIO)\sCOLLECTION|DIAMOND|DVD|IMAX|REDUX|REMASTERED|RESTORED|SPECIAL|(THE\sCOMPLETE\s)?EXTENDED|THE\sGODFATHER\sCODA|(THE\sRICHARD\sDONNER|DIRECTORS|FINAL)\sCUT|THEATRICAL|ULTIMATE|UNCUT|UNRATED)}\s.*$</FileRuleRegEx>
      <Message>Movies, Comedy and Concerts files that have {edition-} specified must have a valid value in the file name</Message>
      <Name>Rule 7</Name>
      <Number>7</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_(Movies|Comedy|Concerts|TV)(\s\(non-t(m|v)db\))?\\.*$</FileToMatchRegEx>
      <FileRuleRegEx>^((?!subtitles).)*$</FileRuleRegEx>
      <Message>Movies, Comedy, Concerts and TV files must not contain subtitles in the file name</Message>
      <Name>Rule 8</Name>
      <Number>8</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_(Movies|Comedy|Concerts|TV)(\s\(non-t(m|v)db\))?\\.*$</FileToMatchRegEx>
      <FileRuleRegEx>^((?!\(\)).)*$</FileRuleRegEx>
      <Message>Movies, Comedy, Concerts and TV files must not contain () in the file name</Message>
      <Name>Rule 9</Name>
      <Number>9</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_(Movies|Comedy|Concerts|TV)(\s\(non-t(m|v)db\))?\\.*$</FileToMatchRegEx>
      <FileRuleRegEx>^((?!\(0\)).)*$</FileRuleRegEx>
      <Message>Movies, Comedy, Concerts and TV files must not contain (0) in the file name</Message>
      <Name>Rule 10</Name>
      <Number>10</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_(Movies|Comedy|Concerts|TV)(\s\(non-t(m|v)db\))?\\.*$</FileToMatchRegEx>
      <FileRuleRegEx>^((?! Proper\]).)*$</FileRuleRegEx>
      <Message>Movies, Comedy, Concerts and TV files must not contain Proper] in the name</Message>
      <Name>Rule 11</Name>
      <Number>11</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_(Movies|Comedy|Concerts|TV)(\s\(non-t(m|v)db\))?\\.*$</FileToMatchRegEx>
      <FileRuleRegEx>^((?! REAL\]).)*$</FileRuleRegEx>
      <Message>Movies, Comedy, Concerts and TV files must not contain REAL] in the file name</Message>
      <Name>Rule 12</Name>
      <Number>12</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_(Movies|Comedy|Concerts|TV)(\s\(non-t(m|v)db\))?\\.*$</FileToMatchRegEx>
      <FileRuleRegEx>^.*\.(m(kv|p(4|e?g))|ts|avi|srt)$</FileRuleRegEx>
      <Message>Movies, Comedy, Concerts and TV files must end with a valid file extension in the file name</Message>
      <Name>Rule 13</Name>
      <Number>13</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_TV(\s\(non-tvdb\))?\\.*-[a-zA-Z]*\.(m(kv|p(4|e?g))|ts|avi)$</FileToMatchRegEx>
      <FileRuleRegEx>^.*\\_TV(?:\s\(non-tvdb\))?\\.*\s{t(m|v)db-\d{1,7}?}\\[^\\]*-(featurette|other|interview|scene|short|deleted|behindthescenes|trailer)\.(m(kv|p(4|e?g))|ts|avi)$</FileRuleRegEx>
      <Message>TV files special features must be in the root folder of the show with a correct suffix</Message>
      <Name>Rule 14</Name>
      <Number>14</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_(Movies|Comedy|Concerts)(\s\(non-t(m|v)db\))?\\.*-[a-zA-Z]*\.(m(kv|p(4|e?g))|ts|avi)$</FileToMatchRegEx>
      <FileRuleRegEx>^.*\\_(Movies|Comedy|Concerts)(?:\s\(non-t(m|v)db\))?\\[a-zA-Z0-9\(\)\s-']*\\[a-zA-Z\(\)0-9\s]*[^\\]*-(featurette|other|interview|scene|short|deleted|behindthescenes|trailer)\.(m(kv|p(4|e?g))|ts|avi)$</FileRuleRegEx>
      <Message>Movies, Comedy, and Concerts files special features must be in the root folder of the movie with a correct suffix</Message>
      <Name>Rule 15</Name>
      <Number>15</Number>
    </FileRule>
    <FileRule>
      <FileToMatchRegEx>^.*\\_(Movies|Comedy|Concerts|TV)(\s\(non-t(m|v)db\))?\\.*$</FileToMatchRegEx>
      <FileRuleRegEx>(?&lt;!\.)\.(m(kv|p(4|e?g))|ts|avi|srt)$</FileRuleRegEx>
      <Message>Movies, Comedy, Concerts and TV files must not have double '.' before the extension</Message>
      <Name>Rule 16</Name>
      <Number>16</Number>
    </FileRule>
  </FileRules>
</Rules>