    <MasterFolder>\\nas1\assets4</MasterFolder>
    <MasterFolder>\\nas2\assets1</MasterFolder>
    <MasterFolder>\\nas2\assets2</MasterFolder>
    <MasterFolder>\\nas2\assets3</MasterFolder>
    <MasterFolder>\\nas2\assets4</MasterFolder>
    <MasterFolder>\\nas3\assets1</MasterFolder>
    <MasterFolder>\\nas3\assets2</MasterFolder>
    <MasterFolder>\\nas3\assets3</MasterFolder>
    <MasterFolder>\\nas3\assets4</MasterFolder>
    <MasterFolder>\\nas4\assets1</MasterFolder>
    <MasterFolder>\\nas4\assets2</MasterFolder>
    <MasterFolder>\\nas4\assets3</MasterFolder>
    <MasterFolder>\\nas4\assets4</MasterFolder>
